<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AI_Graphs.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:AI_Graphs.Models"
    xmlns:viewmodels="clr-namespace:AI_Graphs.ViewModels"
    x:DataType="viewmodels:MainPageViewModel"
    BackgroundColor="#1E1E1E">

    <Grid
        Padding="12"
        ColumnDefinitions="220,*"
        ColumnSpacing="12"
        HorizontalOptions="Fill"
        RowDefinitions="Auto,*"
        RowSpacing="12"
        VerticalOptions="Fill">

        <!-- Compact Top Control Bar -->
        <Border
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Padding="12,10"
            BackgroundColor="#252526"
            StrokeThickness="1"
            Stroke="#3E3E42">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="4" />
            </Border.StrokeShape>

            <Grid ColumnDefinitions="150,*,Auto" ColumnSpacing="15">

                <!-- Node Size Control -->
                <Grid Grid.Column="0" ColumnDefinitions="Auto,*,40" ColumnSpacing="8">
                    <Label
                        Grid.Column="0"
                        FontSize="12"
                        Text="Size:"
                        TextColor="#CCCCCC"
                        VerticalOptions="Center" />
                    <Slider
                        Grid.Column="1"
                        Maximum="50"
                        Minimum="30"
                        ThumbColor="#007ACC"
                        MaximumTrackColor="#3E3E42"
                        MinimumTrackColor="#007ACC"
                        VerticalOptions="Center"
                        Value="{Binding NodesSize}" />
                    <Label
                        Grid.Column="2"
                        FontAttributes="Bold"
                        FontSize="12"
                        Text="{Binding NodesSize, StringFormat='{0:F0}'}"
                        TextColor="#569CD6"
                        HorizontalOptions="End"
                        VerticalOptions="Center" />
                </Grid>

                <!-- Pathfinding Controls -->
                <Grid Grid.Column="1" ColumnDefinitions="*,*,*,Auto" ColumnSpacing="8">
                    <Border Grid.Column="0" BackgroundColor="#1E1E1E" Stroke="#3E3E42" StrokeThickness="1" Padding="8,4">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="3" />
                        </Border.StrokeShape>
                        <Picker
                            IsEnabled="{Binding IsLocked}"
                            ItemsSource="{Binding Cities}"
                            SelectedItem="{Binding SelectedCity1}"
                            TextColor="#D4D4D4"
                            FontSize="12" />
                    </Border>

                    <Border Grid.Column="1" BackgroundColor="#1E1E1E" Stroke="#3E3E42" StrokeThickness="1" Padding="8,4">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="3" />
                        </Border.StrokeShape>
                        <Picker
                            IsEnabled="{Binding IsLocked}"
                            ItemsSource="{Binding Cities}"
                            SelectedItem="{Binding SelectedCity2}"
                            TextColor="#D4D4D4"
                            FontSize="12" />
                    </Border>

                    <Border Grid.Column="2" BackgroundColor="#1E1E1E" Stroke="#3E3E42" StrokeThickness="1" Padding="8,4">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="3" />
                        </Border.StrokeShape>
                        <Picker
                            IsEnabled="{Binding IsLocked}"
                            ItemsSource="{Binding Methods}"
                            SelectedIndex="{Binding SelectedIndex}"
                            SelectedItem="{Binding SelectedMethod}"
                            TextColor="#D4D4D4"
                            FontSize="12" />
                    </Border>

                    <Button
                        Grid.Column="3"
                        Padding="20,8"
                        BackgroundColor="#0E639C"
                        Command="{Binding FindPathCommand}"
                        CornerRadius="3"
                        FontAttributes="Bold"
                        FontSize="13"
                        IsEnabled="{Binding IsLocked}"
                        Text="Find Path"
                        TextColor="#FFFFFF" />
                </Grid>

                <!-- Action Buttons -->
                <HorizontalStackLayout Grid.Column="2" Spacing="6">
                    <Button
                        Padding="12,8"
                        BackgroundColor="#388A34"
                        Command="{Binding GraphInitCommand}"
                        CornerRadius="3"
                        FontSize="11"
                        IsEnabled="{Binding IsNotInitialized}"
                        Text="Load"
                        TextColor="White" />

                    <Button
                        Padding="12,8"
                        BackgroundColor="#0E639C"
                        Command="{Binding ReDrawCommand}"
                        CornerRadius="3"
                        FontSize="11"
                        IsEnabled="{Binding IsLocked}"
                        Text="Resize"
                        TextColor="White" />

                    <Button
                        Padding="12,8"
                        BackgroundColor="#681B7C"
                        Command="{Binding ChangeColorsCommand}"
                        CornerRadius="3"
                        FontSize="11"
                        IsEnabled="{Binding IsLocked}"
                        Text="Colors"
                        TextColor="White" />

                    <Button
                        Padding="12,8"
                        BackgroundColor="#BB6D00"
                        Command="{Binding RandomizeNodesCommand}"
                        CornerRadius="3"
                        FontSize="11"
                        IsEnabled="{Binding IsLocked}"
                        Text="Reset"
                        TextColor="White" />
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Compact Left Sidebar -->
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            RowDefinitions="*,1.2*"
            RowSpacing="12">

            <!-- Countries List -->
            <Border
                Grid.Row="0"
                BackgroundColor="#252526"
                StrokeThickness="1"
                Stroke="#3E3E42">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="4" />
                </Border.StrokeShape>
                <Grid RowDefinitions="Auto,*" RowSpacing="0">
                    <Border
                        Grid.Row="0"
                        Padding="10,8"
                        BackgroundColor="#007ACC">
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="Countries"
                            TextColor="White" />
                    </Border>
                    <ScrollView Grid.Row="1">
                        <CollectionView
                            ItemsLayout="VerticalList"
                            ItemsSource="{Binding CountriesNodes}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:CountryAndID">
                                    <Border
                                        Padding="8,6"
                                        BackgroundColor="Transparent"
                                        StrokeThickness="0">
                                        <Grid ColumnDefinitions="35,*" ColumnSpacing="8">
                                            <Label
                                                Grid.Column="0"
                                                FontAttributes="Bold"
                                                FontSize="11"
                                                Text="{Binding CountryID}"
                                                TextColor="#4EC9B0"
                                                VerticalOptions="Center" />
                                            <Label
                                                Grid.Column="1"
                                                FontSize="11"
                                                Text="{Binding CountryName}"
                                                TextColor="#D4D4D4"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>
                </Grid>
            </Border>

            <!-- Path Display -->
            <Border
                Grid.Row="1"
                BackgroundColor="#252526"
                StrokeThickness="1"
                Stroke="#3E3E42">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="4" />
                </Border.StrokeShape>
                <Grid RowDefinitions="Auto,*" RowSpacing="0">
                    <Border
                        Grid.Row="0"
                        Padding="10,8"
                        BackgroundColor="#C586C0">
                        <Grid RowDefinitions="Auto,Auto" RowSpacing="3">
                            <Label
                                Grid.Row="0"
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="Path Result"
                                TextColor="White" />
                            <HorizontalStackLayout Grid.Row="1" Spacing="4">
                                <Label
                                    FontSize="10"
                                    Text="From"
                                    TextColor="White"
                                    Opacity="0.8" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="10"
                                    Text="{Binding SelectedCity1}"
                                    TextColor="White" />
                                <Label
                                    FontSize="10"
                                    Text="→"
                                    TextColor="White" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="10"
                                    Text="{Binding SelectedCity2}"
                                    TextColor="White" />
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>
                    <ScrollView Grid.Row="1">
                        <CollectionView
                            ItemsLayout="VerticalList"
                            ItemsSource="{Binding Paths}"
                            ItemsUpdatingScrollMode="KeepLastItemInView">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:PathModel">
                                    <VerticalStackLayout>
                                        <Border
                                            Padding="8,6"
                                            BackgroundColor="Transparent"
                                            StrokeThickness="0">
                                            <Grid ColumnDefinitions="30,*" ColumnSpacing="8">
                                                <Label
                                                    Grid.Column="0"
                                                    FontAttributes="Bold"
                                                    FontSize="11"
                                                    Text="{Binding CID}"
                                                    TextColor="#DCDCAA"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    Grid.Column="1"
                                                    FontSize="11"
                                                    Text="{Binding CName}"
                                                    TextColor="#D4D4D4"
                                                    VerticalOptions="Center" />
                                            </Grid>
                                        </Border>
                                        <BoxView
                                            HeightRequest="18"
                                            HorizontalOptions="Center"
                                            Opacity="{Binding BoxOpacity}"
                                            WidthRequest="2"
                                            Color="#C586C0" />
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>
                </Grid>
            </Border>
        </Grid>

        <!-- Expanded Graph Canvas -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="#1E1E1E"
            StrokeThickness="1"
            Stroke="#3E3E42">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="4" />
            </Border.StrokeShape>
            <GraphicsView
                x:Name="MainCanvas"
                Drawable="{Binding Canvas}"
                HorizontalOptions="Fill"
                MinimumHeightRequest="500"
                VerticalOptions="Fill" />
        </Border>
    </Grid>
</ContentPage>
